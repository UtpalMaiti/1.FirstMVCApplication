@model FirstMVCApplication.Models.LoginInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <form method="post" action="/">
            <div>
                @Html.ValidationSummary()
            </div>

            <br />
            <h2>Welcome to LogIn Page...</h2>
            <p>
                <label>UserName : @Html.TextBoxFor(e => e.UserName)</label>
                <label style="color:red">@Html.ValidationMessageFor(a => a.UserName)</label>
            </p>
            <p>
                <label>PassWord : @Html.PasswordFor(x => x.PassWord)</label>
                <label style="color:red">@Html.ValidationMessageFor(x => x.PassWord)</label>
            </p>
            <p style="color:red">
                @Html.ValidationMessage("InvalidLogIn")
            </p>
            <button>LogIn</button>
        </form>
    </div>
</body>
</html>